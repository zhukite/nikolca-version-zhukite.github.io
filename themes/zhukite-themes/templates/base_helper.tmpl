<%def name="html_sidebar_links()">
    %for url, text in sidebar_links[lang]:
        % if rel_link(permalink, url) == "#":
            <li ><a class="current" href="${url}">${text}</a>
        %else:
            %if url == "/rss.xml":
                <li class="rss" ><a href="${url}">${text}</a>
            %else:
                <li><a href="${url}">${text}</a>
            %endif
        %endif
    %endfor
</%def>


